{
  "lexicon": 1,
  "id": "dev.avaas.function",
  "description": "A serverless function record that runs user-supplied code with declared inputs, outputs, and dependencies.",
  "defs": {
    "main": {
      "type": "record",
      "description": "A user-defined function with typed input/output schemas and optional dependencies.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["name", "code", "mode", "inputSchema", "outputSchema", "createdAt"],
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 256
          },
          "description": {
            "type": "string",
            "maxLength": 2048
          },
          "code": {
            "type": "blob",
            "accept": [
              "application/typescript",
              "text/typescript",
              "application/javascript",
              "text/javascript"
            ],
            "maxSize": 1048576
          },
          "mode": {
            "type": "string",
            "knownValues": ["read", "write"]
          },
          "inputSchema": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "dev.avaas.defs#namedFieldSchema"
            }
          },
          "outputSchema": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "dev.avaas.defs#namedFieldSchema"
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "dev.avaas.defs#dependency"
            }
          },
          "runtime": {
            "type": "ref",
            "ref": "#runtimeConfig"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    },
    "runtimeConfig": {
      "type": "object",
      "description": "Runtime constraints for function execution.",
      "properties": {
        "timeoutMs": {
          "type": "integer",
          "minimum": 100,
          "maximum": 30000
        },
        "memoryMb": {
          "type": "integer",
          "minimum": 64,
          "maximum": 1024
        }
      }
    }
  }
}
